<%# javascript_include_tag 'admin/tiny_mce/tiny_mce.js' %>
<script src="/tiny_mce/tiny_mce.js" type="text/javascript"></script>

<%= javascript_include_tag 'editors/config.js' %>

<script type="text/javascript">
  $(function() {
    var ids = [<%= raw ids.map{|id| "'textarea##{id}'"}.join(', ') %>], els = [];
    $(ids.join(', ')).each(function() {
      els.push(this.id);
    });
    if (typeof Editors !== 'object') { Editors = {} }
    tinyMCE.init($.extend(Editors.TinyMCE, {
      mode: "exact",
      elements: els.join(', '),
    }));
  });
</script>
